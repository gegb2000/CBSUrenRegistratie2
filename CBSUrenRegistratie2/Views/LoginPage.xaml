<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CBSUrenRegistratie2.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30"
        VerticalOptions="Center"
        HorizontalOptions="Fill">

        <core:SfTextInputLayout Hint="Username" ContainerType="Outlined">
            <Entry x:Name="usernameEntry" />
        </core:SfTextInputLayout>

        <core:SfTextInputLayout Hint="Password" ContainerType="Outlined">
            <Entry x:Name="passwordEntry" IsPassword="True" />
        </core:SfTextInputLayout>

        <buttons:SfButton x:Name="loginButton" Text="Login" HorizontalOptions="Fill" Clicked="OnLoginButtonClicked" />
    </VerticalStackLayout>
</ContentPage>