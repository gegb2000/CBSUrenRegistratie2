<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="http://schemas.syncfusion.com/maui"
             x:Class="CBSUrenRegistratie2.Views.WorkerDashboardPage"
             Title="Worker Dashboard">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <!-- Syncfusion Button to navigate to Time Logging Page -->
            <sf:SfButton Text="Go to Time Logging" 
                         Command="{Binding NavigateCommand}"
                         CommandParameter="timeLogging"/>
            <!-- Placeholder for future navigation buttons -->
            <!-- Additional Syncfusion components can be added here as needed -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
